<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uyr.yusara.mydiceapps.ColorActivity">

    <Button
        android:id="@+id/randomAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:background="@android:color/transparent"
        android:contextClickable="false"
        android:longClickable="false"
        android:onClick="goRandomColor"
        android:text="Tap To Generate"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="245dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/displayColour"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        app:srcCompat="@drawable/color" />

    <TextView
        android:id="@+id/displayColour"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:background="@color/silver"
        android:gravity="center"
        android:shadowColor="?android:attr/colorEdgeEffect"
        android:text="Color Code"
        android:textColor="@color/primary_dark_material_light_1"
        android:textColorLink="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
